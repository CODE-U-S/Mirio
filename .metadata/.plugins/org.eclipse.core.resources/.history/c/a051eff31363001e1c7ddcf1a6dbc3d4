package Stage;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;
import javax.imageio.ImageIO;

public class StartPanel extends JPanel {
    private final JFrame parentFrame;

    public StartPanel(JFrame parentFrame) {
        this.parentFrame = parentFrame;

        // 배경 이미지를 넣을 수 있는 JLabel을 사용
        ImageIcon backgroundImageIcon = new ImageIcon("images/001.png");
        JLabel backgroundLabel = new JLabel(backgroundImageIcon);

        // 배경 이미지를 컨테이너로 설정
        setLayout(new BorderLayout());
        add(backgroundLabel, BorderLayout.CENTER);

        // 레이어드 패널을 사용하여 버튼 추가
        JLayeredPane layeredPane = new JLayeredPane();
        layeredPane.setPreferredSize(new Dimension(backgroundImageIcon.getIconWidth(), backgroundImageIcon.getIconHeight()));
        add(layeredPane, BorderLayout.CENTER);

        // 투명 버튼 추가
        JButton startButton = new JButton("게임 시작");
        startButton.setForeground(Color.WHITE);
        startButton.setFont(new Font("Arial", Font.BOLD, 24));
        startButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                // 게임 시작 버튼 클릭 시 캐릭터 패널로 전환
                CharacterPanel characterPanel = new CharacterPanel(parentFrame);
                parentFrame.getContentPane().removeAll();
                parentFrame.add(characterPanel);
                parentFrame.validate();
            }
        });

        // 버튼을 레이어드 패널에 추가 (위치 조절 가능)
        layeredPane.add(startButton, JLayeredPane.PALETTE_LAYER);
        startButton.setBounds(200, 300, startButton.getPreferredSize().width, startButton.getPreferredSize().height);
    }
}

